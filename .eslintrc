{
  "env": {
    "browser": true,
    "es2021": true,
  },
  "globals": {
    "process": "readonly" // Добавление process как глобальной переменной
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended",
    "plugin:prettier/recommended" // Добавление поддержки Prettier
  ],
  "overrides": [
    {
      "env": { "node": true },
      "files": [".eslintrc.{js,cjs}"],
      "parserOptions": { "sourceType": "script" }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2023,
    "sourceType": "module"
  },
  "plugins": ["vue", "prettier"],
  "rules": {
    "max-len": "off", // Отключаем правило max-len
    "vue/multi-word-component-names": "off",
    "vue/valid-v-slot": "off",
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true, "allowTemplateLiterals": true }
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "tabWidth": 2,
        "singleQuote": true,
        "semi": false,
        "endOfLine": "auto",
        "printWidth": 60
      }
    ]
  }
}
